@inject Microsoft.Extensions.Configuration.IConfiguration config
@{
    ViewData["Title"] = "Quickly send files, URL or any texts across your devices!";
}
@section AboveBody
{
    <div class="jumbotron">
        <div class="container">
            <h1 class="text-lowercase">Pass files or <span title="Long URL, unfinished facebook status, code blocks!" style="border-bottom: 1px dotted #fff;cursor: help;">any texts</span> between your devices</h1>
            
            <div id="connect-panel">
                <a id="new-session" asp-controller="App" asp-action="NewSession" class="btn btn-lg btn-primary btn-block" style="margin-bottom: 5px; display: none;">Start</a>
                <noscript>
                    <a asp-controller="App" asp-action="LiteSessionNew" class="btn btn-lg btn-primary btn-block" style="margin-bottom: 5px">Start*</a>
                </noscript>
                <a id="connect" asp-action="Connect" asp-controller="App" style="opacity: 0.7" class="btn btn-lg btn-primary btn-block" >Connect</a>
            </div>
            <noscript>
                <p class="small">
                    * Your device is too outdated to experience the full rich experience of this app
                </p>
            </noscript>
           
        </div>
    </div>
    <div class="jumbotron share">
        <div class="container">
            <partial name="_Share"/>
        </div>
    </div>
}
<div class="text-center" style="color: #888;">
    <h2 class="text-lowercase">Quickly send files, URL or any texts across your devices!</h2>
    <p>
        Imagine sending a long URL to your PS4 browser! or sending an important file to your friends computer without having to install an app or logging into a site just for that!
    </p>
    <div class="row">
       
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-bolt"></i> Fast</h3>
                </div>
                <div class="panel-body text-left">
                    <ul>
                        <li>No login/registration required.</li>
                        <li>All you need is a browser.</li>
                        <li>Share Files <strong>upto @config["MaxUploadSizeDisplay"]</strong>, URL or arbitrary text.</li>
                        <li>
                            Very old browser? use <a asp-controller="App" asp-action="LiteSessionNew">Lite version</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-lock"></i> Secure</h3>
                </div>
                <div class="panel-body text-left">
                    <ul>
                        <li>Secure Encrypted connection.</li>
                        <li>Message is End to end encrypted.</li>
                        <li>Everything is erased as soon as you close the window.</li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>
<span id="forkongithub"><a href="https://mustakimali.github.io/JustA.ML" target="_blank">Fork me on GitHub</a></span>
@section Scripts
{
<script type="text/javascript">
    (function($) {
        if(window.innerWidth <= 340){
            showNoscripts($);
        }

        $("*[title]").tooltip();
        $("#new-session").css("display", "block");
    })(window.jQuery);
</script>
}
