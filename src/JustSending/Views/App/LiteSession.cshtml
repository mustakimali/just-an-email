@model JustSending.Models.LiteSessionModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration config
@{
    ViewBag.Title = "Sharing session";
}
@section AboveBody {
    <div class="jumbotron">
        <div class="container">
            <div class="conversation">
                <div class="composer">
                    <form id="form"
                          asp-action="PostLite"
                          asp-controller="App"
                          asp-route-lite="true"
                          data-max-b="@config["MaxUploadSizeBytes"]"
                          data-max-display="@config["MaxUploadSizeDisplay"]"
                          enctype="multipart/form-data"
                          method="POST">

                        <div class="input-group input-group-lg">
                            @Html.TextAreaFor(x => x.ComposerText, new { @class = "form-control", placeholder = "Send file, text, URL etc. (Ctrl+Enter to send)", onfocus = "this.select()" })

                            <span class="input-group-btn hidden-xs">
                                <button class="sendBtn btn btn-success" style="font-weight: bold;" type="submit">Send <i class="fa fa-arrow-circle-right"></i></button>
                            </span>
                        </div>
                        <input id="file" name="file" type="file" />
                        <div class="bg btn-group hidden-sm hidden-md hidden-lg" role="group" aria-label="Action buttons">
                            <button class="sendBtn btn btn-success" style="font-weight: bold;" type="submit">Send <i class="fa fa-arrow-circle-right"></i></button>
                        </div>
                        @Html.ValidationMessageFor(x => x.ComposerText)

                        <partial name="_LiteFormHiddens" model="@Model" />
                    </form>
                </div>
            </div>
        </div>
        
    </div>

    <div id="share" class="jumbotron sticky-footer">
        <div class="container">

            @if (Model.Token.HasValue)
            {
                <div class="share-panel row">
                    <div class="col-sm-7 col-xs-12" style="margin-bottom: 5px;">
                        <form asp-action="CancelShareToken">
                            <h1 title="Use this PIN to securely connect to this session from another device"><i class="fa fa-lock text-"></i>&nbsp;<span id="token">@Model.Token.Value</span> <button class="cancelShareBtn btn btn-wide btn-danger hidden-xs" title="Dispose this PIN">Cancel</button></h1>
                            <button class="cancelShareBtn btn btn-block btn-danger hidden-sm hidden-md hidden-lg" title="Dispose this PIN">Cancel</button>

                            <partial name="_LiteFormHiddens" model="@Model" />
                        </form>
                    </div>
                    <div class="col-sm-5 hidden-xs">
                        <div class="instruction">
                            <partial name="_ConnectInstructions" />
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="share-actions">
                    <form asp-action="CreateShareToken">
                        <button id="shareBtn" class="btn btn-success pull-left">Connect another Device</button>

                        <partial name="_LiteFormHiddens" model="@Model" />
                    </form>
                    <a id="deleteBtn" href="#" class="btn btn-danger pull-right" title="Finish and Erase Everything"><i class="fa fa-trash-o"></i></a>
                    <span id="connectedDevices" class="btn btn-warning" title="Number of devices connected"><span class="badge">2</span></span>
                    <div class="clearfix"></div>
                </div>
            }
        </div>
    </div>
    <a asp-action="LiteSession"
       asp-route-id1="@Model.SessionId"
       asp-route-id2="@Model.SessionVerification"
       class="btn btn-warning btn-block">
        <i class="fa fa-refresh"></i> Refresh
    </a>
    
    <noscript>
        <div class="ref-info">Your device doesn't support auto reloading, use the <b>Refresh</b> button <i class="fa fa-arrow-up"></i> to check for new message.</div>
    </noscript>
}

<div id="conversation">
    
    <div id="conversation-list">
        <partial name="GetMessages" for="@Model.Messages" />
    </div>

    <div class="welcome-note">
        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h2>Connect another Device</h2>
            @if (!Model.Token.HasValue)
            {
                <div class="share-actions">
                    Click <strong>Connect another Device</strong> on the panel at the bottom of the screen to generate an unique PIN to let other device connect.
                </div>
            }
            else
            {
                <div class="share-panel">
                    <ul>
                        <li>On another device, go to <a style="font-weight: bold;" href="@Context.Request.Scheme://@Context.Request.Host" target="_blank">@Context.Request.Scheme://@Context.Request.Host</a></li>
                        <li>Click CONNECT</li>
                        <li>Use the <i class="fa fa-lock"></i> PIN (usually 6 digit number) you see at the bottom of this screen!</li>
                        <li>Start sharing between connected devices!</li>
                    </ul>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/autosize.js/4.0.0/autosize.min.js"></script>
    <script src="~/js/JustSendingApp.js"></script>
    <script src="~/js/JustSendingApp.Lite.js"></script>
}
@section Head
{
    <partial name="_CommonHead" />
    
}
